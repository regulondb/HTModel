{
    "peaks": {
        "validator": {
            "$jsonSchema": {
                "type": "object",
                "required": [
                    "_id",
                    "datasetIds",
                    "closestGene"
                ],
                "properties": {
                    "_id": {
                        "type": ["string"]
                    },
                    "closestGenes": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "type": "object",
                            "properties": {
                                "_id": {
                                    "type": ["string"]
                                },
                                "name": {
                                    "type": ["string"]
                                },
                                "distanceTo": {
                                    "type": ["number"]
                                },
                                "productName": {
                                    "type": ["string"]
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "chromosome": {
                        "type": ["string", "null"]
                    },
                    "peakLeftPosition": {
                        "type": ["number", "null"]
                    },
                    "peakRightPosition": {
                        "type": ["number", "null"]
                    },
                    "score": {
                        "type": ["number", "null"]
                    },
                    "siteIds": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                    },
                    "datasetIds": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "validationLevel": "strict",
        "validationAction": "error"
    }
}