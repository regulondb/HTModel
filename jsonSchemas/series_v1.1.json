{
    "series": {
        "validator": {
            "$jsonSchema": {
                "type": "object",
                "required": [
                    "_id",
                    "organism"
                ],
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "organism": {
                        "type": "string"
                    },
                    "authors": {
                        "type": "array",
                        "uniqueItems": true,
                        "items":{
                            "type": "string"
                        }
                    },
                    "laboratory": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "correspondingAuthor": {
                        "type": "string"
                    },
                    "externalCrossReferences": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                          "type": "object",
                          "required": ["externalCrossReferences_id", "objectId"],
                          "properties": {
                            "externalCrossReferenceId": {
                                "type": ["string", "null"],
                                "pattern": "^RDB[A-Z0-9_]{5}[A-Z]{3}[0-9A-Z]{5}$"
                            },
                            "externalCrossReferenceName": {
                                "type": ["string", "null"]
                            },
                            "objectId": {
                                "type": ["string", "null"]
                            },
                            "url": {
                                "type": ["string", "null"]
                            }
                        },
                          "additionalProperties": false
                        }
                    },
                    "title": {
                        "type": "string"
                    },
                    "experimentType": {
                        "type": "string"
                    },
                    "summary": {
                        "type": "string"
                    },
                    "citations": {
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "type": "object",
                            "properties": {
                                "publication": {
                                    "type": "object",
                                    "properties": {
                                        "authors": {
                                            "type": "array",
                                            "uniqueItems": true,
                                            "items": {
                                                "type": ["string", "null"]
                                            }
                                        },
                                        "pmid": {
                                            "type": ["string", "null"]
                                        },
                                        "id": {
                                            "type": ["string", "null"],
                                            "pattern": "^RDB[A-Z0-9_]{5}[A-Z]{3}[0-9A-Z]{5}$"
                                        },
                                        "citation": {
                                            "type": ["string", "null"]
                                        },
                                        "title": {
                                            "type": ["string", "null"]
                                        },
                                        "url": {
                                            "type": ["string", "null"]
                                        },
                                        "year": {
                                            "type": "number"
                                        }
                                    },
                                    "additionalProperties": false
                                },
                                "evidence": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": ["string", "null"]
                                        },
                                        "id": {
                                            "type": ["string", "null"],
                                            "pattern": "^RDB[A-Z0-9_]{5}[A-Z]{3}[0-9A-Z]{5}$"
                                        },
                                        "name": {
                                            "type": ["string", "null"]
                                        },
                                        "type": {
                                            "type": ["string", "null"]
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "additionalProperties": false
                        }
                    }
                },
                "additionalProperties": false
            }
        },
        "validationLevel": "strict",
        "validationAction": "error"
    }
}